{
  "name": "exito-cart-playwright",
  "version": "1.0.0",
  "description": "E2E suite – Maestría Mejora de Procesos de Calidad de Software",
  "author": "Mariana Palacios",
  "main": "index.js",
"scripts": {
  "test":           "playwright test",     
  "test:headed":    "playwright test --headed",
  "test:chromium":  "playwright test --headed --project=chromium",
  "test:firefox":   "playwright test --headed --project=firefox",
  "test:webkit":    "playwright test --headed --project=webkit",
  "test:ui":        "playwright test --ui",
  "test:ci":        "CI=true playwright test --reporter=dot",
  "report":         "npx playwright show-report reports/html",
  "lint":           "eslint \"src/**/*.{ts,tsx}\" --fix",
  "pw:init":        "npx playwright install"
}
,
  "keywords": [],
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.17"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "eslint": "^9.26.0",
    "typescript": "^5.8.3"
  }
}
